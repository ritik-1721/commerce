<%- include("partials/header"); -%> <%- include("partials/side-panel"); -%>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-12">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item">
              <a href="<%= base_url %>admin/home">Home</a>
            </li>
            <li class="breadcrumb-item active">Category</li>
          </ol>
        </div>
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </div>
  <!-- /.content-header -->

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="card card-default color-palette-box">
        <div class="card-header">
          <h3 class="card-title">
            <h5 class="m-0">
              Category
              <button
                type="button"
                onclick="$('#addCategoryModal').modal('show');$('#hidden_parent_id').val(0);$('#head_category_name').html('New Head');"
                class="btn btn-primary btn-xs float-right"
              >
                <i class="fa fa-plus-circle fa-fw"></i> Add Category Head
                <i>&nbsp;</i>
              </button>
            </h5>
          </h3>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-sm-12">
              <div class="treeview" id="hieratchyList"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!--/. container-fluid -->
  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<!-- Modal -->
<div
  class="modal fade"
  id="addCategoryModal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="modal-title" id="exampleModalLabel">
          Add Category
          <i
            ><small>(<span id="head_category_name"></span>)</small></i
          >
        </h3>
        <button
          type="button"
          class="close"
          onclick="$('#addCategoryModal').modal('hide');"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="forms-sample row">
          <input type="hidden" id="hidden_parent_id" name="hidden_parent_id" />
          <div class="form-group col-sm-12">
            <label for="category_name"><b>Category Name</b></label>
            <input
              type="text"
              class="form-control"
              id="category_name"
              name="category_name"
              placeholder="Enter Category Name..."
            />
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <div id="addCategoryError"></div>
        <button
          type="button"
          class="btn btn-secondary"
          onclick="$('#addCategoryModal').modal('hide');"
        >
          Close
        </button>
        <button
          type="button"
          class="btn btn-primary"
          onclick="addCategory(this)"
          ;
        >
          Save
        </button>
      </div>
    </div>
  </div>
</div>
<!--  -->
<script src="../public/views-js/category.js"></script>
<%- include("partials/footer"); -%>
